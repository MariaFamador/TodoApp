<!DOCTYPE html>
<html>
<head>
  <title>TodoApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render partial: "shared/flash_messages", flash: flash %>    
  <div class='dashboard-navbar'>
    <%= link_to "Home", "/" %>
    <%= link_to "Today", today_dashboard_index_path %>
    <%= link_to "Tomorrow", tomorrow_dashboard_index_path %>
    <%= link_to "Following Days", following_days_dashboard_index_path %>
  </div>
<%= yield %>

</body>
</html>
